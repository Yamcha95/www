{% extends 'base.html.twig' %}

{% block title %}Accueil | Générateur de mots de passe{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Bienvenue sur StrongBox.</h1>
    <p class="mb-4">Générez un mot de passe sécurisé recommandé par la CNIL :</p>

    {{ form_start(form, {'attr': {'class': 'mb-4'}}) }}
        <div class="row g-3">
            <div class="col-md-3">
                {{ form_row(form.length) }}
            </div>
            <div class="col-md-9">
                {{ form_row(form.include_uppercase) }}
                {{ form_row(form.include_lowercase) }}
                {{ form_row(form.include_numbers) }}
                {{ form_row(form.include_symbols) }}
            </div>
        </div>
        <button class="btn btn-primary mt-3">Générer</button>
    {{ form_end(form) }}

            {% if password %}
            <div class="alert alert-success mt-4 d-flex justify-content-between align-items-center">
                <div>
                    <strong>Mot de passe généré :</strong><br>
                    <code id="generated-password" style="font-size: 1.2em;">{{ password }}</code>
                </div>
                <button id="copy-btn" class="btn btn-outline-secondary btn-sm">Copier</button>
            </div>

            <!-- Toast Bootstrap -->
            <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
            <div id="copyToast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                <div class="toast-body">
                    Mot de passe copié !
                </div>
                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
            </div>

            <script>
            document.getElementById('copy-btn').addEventListener('click', () => {
                const passwordText = document.getElementById('generated-password').innerText;
                navigator.clipboard.writeText(passwordText).then(() => {
                const toastEl = document.getElementById('copyToast');
                const toast = new bootstrap.Toast(toastEl);
                toast.show();
                });
            });
            </script>
        {% endif %}

    <div class="d-grid gap-2 col-6 mx-auto">
            <a href="{{ path('app_mdp_new') }}" class="btn btn-primary">+ Ajoutez un mot de passe</a>
    </div>
</div>
{% endblock %}
