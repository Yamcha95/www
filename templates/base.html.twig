<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{% block title %}Welcome!{% endblock %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    {% block stylesheets %}{% endblock %}
  </head>
  <nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('app_home') }}"><img src="{{ asset('images/StrongBox (2).png') }}" alt="Logo" height="60"></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
        <li class="nav-item">
          <a class="nav-link" href="#">Mes mots de passes</a>
        </li>
      </ul>

      <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        {% if app.user %}
          <a class="btn btn-primary me-md-2" href="{{ path('app_profile') }}">
            Bonjour, {{ app.user.email }}
          </a>
          <button type="button" class="btn btn-outline-danger" onclick="location.href='{{ path('app_logout') }}'">
            DÃ©connexion
          </button>
        {% else %}
          <button class="btn btn-outline-secondary" type="button" onclick="window.location.href='{{ path('app_register') }}'">Inscription</button>
          <button class="btn btn-primary" type="button" onclick="window.location.href='{{ path('app_login') }}'">Connexion</button>
        {% endif %}
      </div>

    </div>
  </div>
</nav>
<body>
    {% block body %}{% endblock %}
</body>
</html>
